{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "references": [
    // 해당 패키지를 참조할수있음
    {
      "path": "packages/core"
    },
    {
      "path": "packages/member"
    }
  ]
}
